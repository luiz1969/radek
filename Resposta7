#include <stdio.h>

int main ()
{
  char texto[99];
  int i;
  int intTamanho;
  
  printf("Inserir uma palavra \n");
  scanf("%s", texto);
  
  
  for(i=0;i<100;i++){
    if(texto[i]=='\0'){
        intTamanho = i;
        i=100;
    }
  }
  
  printf("Tamanho do texto Ã© %d \n", intTamanho);  
        
  return 0;

} 

